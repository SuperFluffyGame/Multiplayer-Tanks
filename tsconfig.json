{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "ESnext",
        "module": "ESNext",
        "moduleResolution": "node",
        "strict": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "alwaysStrict": true,
        "esModuleInterop": true
    },
    "include": ["src"],
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    }
}
